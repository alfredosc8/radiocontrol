<?xml version="1.0" encoding="utf-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>api</servlet-name>
        <servlet-class>se.mxt.code.radiocontrol.servlet.APIServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imagestore</servlet-name>
        <servlet-class>se.mxt.code.radiocontrol.servlet.ImageStoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>api</servlet-name>
        <url-pattern>/api/v1/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imagestore</servlet-name>
        <url-pattern>/imagestore/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>radiocontrolapp.html</welcome-file>
    </welcome-file-list>
</web-app>